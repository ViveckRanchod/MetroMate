<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Driver">

    <TextView
        android:id="@+id/tvRegisterAcc"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/register_your_account"
        app:layout_constraintBottom_toTopOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.597" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:hint="Enter email address @"
        android:importantForAutofill="yes"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toTopOf="@+id/edtPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.388"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="107dp"
        android:layout_height="54dp"
        android:layout_marginBottom="48dp"
        android:backgroundTint="@color/dark_golden_rod"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvDateOfBirth"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="88dp"
        android:text="@string/date_of_brith"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvPassword"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/password_minimum_of_8_characters"
        app:layout_constraintBottom_toTopOf="@+id/edtPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.209"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/edtBadgeId"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:hint="Enter driver badge ID"
        android:importantForAutofill="yes"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.37"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edtName"
        style="@style/TextInBox"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:hint="First Name"
        android:importantForAutofill="yes"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tvBadgeId"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edtDateOfBirth"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:hint="@string/_1999_05_11"
        android:importantForAutofill="yes"
        android:inputType="date"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.425"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tvBadgeId"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/driver_badge_id"
        app:layout_constraintBottom_toTopOf="@+id/edtBadgeId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"

        android:text="@string/email"
        app:layout_constraintBottom_toTopOf="@+id/edtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.065"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtPassword"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:hint="********"
        android:importantForAutofill="yes"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/tvDateOfBirth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.407"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/edtLastName"
        style="@style/TextInBox"
        android:layout_width="165dp"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:hint="Last Name"
        android:importantForAutofill="yes"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/tvBadgeId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.352"
        app:layout_constraintStart_toEndOf="@+id/edtName"
        tools:ignore="LabelFor" />

    <TextView
        android:id="@+id/tvName"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/edtLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.066"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="249dp"
        android:layout_height="42dp"
        android:contentDescription="@string/metromate_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.005"
        app:srcCompat="@drawable/logo_light_cropped" />

</androidx.constraintlayout.widget.ConstraintLayout>