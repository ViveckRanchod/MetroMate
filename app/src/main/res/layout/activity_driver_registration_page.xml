<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#F6F6F6"
    tools:context=".Driver">

    <EditText
        android:id="@+id/edtDateOfBirth"
        style="@style/TextInBox"
        andriod:layout_width="wrap_content"
        android:layout_width="339dp"
        andriod:layout_height="wrap_content"
        android:layout_height="53dp"
        android:layout_marginBottom="24dp"
        andriod:autofillHints="@string/_1999_05_11"
        android:background="@drawable/custom_edit_text_border"
        andriod:ems="10"
        android:importantForAutofill="yes"
        andriod:inputType="date"
        andriod:text="@string/_1999_05_11"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtLastName"
        style="@style/TextInBox"
        android:layout_width="165dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:autofillHints="Last Name"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:importantForAutofill="yes"
        android:inputType="text"
        android:text="@string/last_name"
        app:layout_constraintBottom_toTopOf="@+id/tvBadgeId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.361"
        app:layout_constraintStart_toEndOf="@+id/edtName" />

    <EditText
        android:id="@+id/edtName"
        style="@style/TextInBox"
        android:layout_width="157dp"
        android:layout_height="53dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="12dp"
        android:autofillHints="First Name"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:importantForAutofill="yes"
        android:inputType="text"
        android:text="@string/first_name"
        app:layout_constraintBottom_toTopOf="@+id/tvBadgeId"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvBadgeId"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/driver_badge_id"
        app:layout_constraintBottom_toTopOf="@+id/edtBadgeId"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="107dp"
        android:layout_height="54dp"
        android:layout_marginBottom="36dp"
        andriod:backgroundTint="@color/dark_golden_rod"
        android:text="@string/sign_up"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtPassword"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="20dp"
        android:autofillHints="********"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:importantForAutofill="yes"
        android:inputType="textPassword"
        andriod:text="********"
        app:layout_constraintBottom_toTopOf="@+id/tvDateOfBirth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"

        android:text="@string/email"
        app:layout_constraintBottom_toTopOf="@+id/edtEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvRegisterAcc"
        style="@style/Header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/register_your_account"
        app:layout_constraintBottom_toTopOf="@+id/tvName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.368" />

    <TextView
        android:id="@+id/tvName"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/name"
        app:layout_constraintBottom_toTopOf="@+id/edtLastName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.074"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtBadgeId"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="16dp"
        android:autofillHints="Enter driver badge ID"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:importantForAutofill="yes"
        android:inputType="text"
        andriod:text="Enter driver badge ID"
        app:layout_constraintBottom_toTopOf="@+id/tvEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/TextInBox"
        android:layout_width="339dp"
        android:layout_height="53dp"
        android:layout_marginBottom="56dp"
        android:autofillHints="Enter email address @"
        android:background="@drawable/custom_edit_text_border"
        android:ems="10"
        android:importantForAutofill="yes"
        android:inputType="textEmailAddress"
        andriod:text="Enter email address @"
        app:layout_constraintBottom_toTopOf="@+id/edtPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPassword"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/password_minimum_of_8_characters"
        app:layout_constraintBottom_toTopOf="@+id/edtPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.236"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtEmail"
        app:layout_constraintVertical_bias="0.413" />

    <TextView
        android:id="@+id/tvDateOfBirth"
        style="@style/Headers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginBottom="84dp"
        android:text="@string/date_of_brith"
        app:layout_constraintBottom_toTopOf="@+id/btnSignUp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        andriod:id="@+id/imageView"
        andriod:layout_width="wrap_content"
        android:layout_width="345dp"
        andriod:layout_height="wrap_content"
        android:layout_height="78dp"
        andriod:contentDescription="@string/metromate_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/logo_light_cropped" />

</androidx.constraintlayout.widget.ConstraintLayout>