<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:andriod="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:visibility="visible"
    tools:context=".ui.schedules.SchedulesFragment"
    tools:visibility="visible">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="249dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        andriod:contentDescription="@string/metromate_logo"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_light_cropped" />

    <Spinner
        android:id="@+id/schedule_droplist"
        android:layout_width="385dp"
        android:layout_height="67dp"
        android:layout_marginTop="16dp"
        andriod:background="@drawable/spinner_border"
        android:backgroundTint="#C0C0C0"
        android:entries="@array/areas_array"
        android:prompt="@string/spinner_prompt"
        andriod:spinnerMode="dropdown"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="HardcodedText" />

    <ImageView
        andriod:id="@+id/schedule_img"
        andriod:layout_width="wrap_content"
        android:layout_width="352dp"
        andriod:layout_height="wrap_content"
        android:layout_height="361dp"
        andriod:src="@drawable/bus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <include layout="@layout/layout_bottom_navigation" />-->

</androidx.constraintlayout.widget.ConstraintLayout>