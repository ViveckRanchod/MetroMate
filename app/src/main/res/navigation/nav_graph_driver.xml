<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_driver"
    app:startDestination="@id/busHomePage">

    <fragment
        android:id="@+id/busHomePage"
        android:name="com.example.metromate01.FirstFragment"
        android:label="Home"
        tools:layout="@layout/driver_homepage">

        <action
            android:id="@+id/action_firstFragment_to_secondFragment"
            app:destination="@id/secondFragment" />
        <action
            android:id="@+id/action_firstFragment_to_thirdFragment"
            app:destination="@id/thirdFragment" />

    </fragment>

    <fragment
        android:id="@+id/secondFragment"
        android:name="com.example.metromate01.SecondFragment"
        tools:layout="@layout/activity_schedule_page" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.metromate01.ThirdFragment"
        tools:layout="@layout/fragment_third" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.metromate01.FourthFragment"
        tools:layout="@layout/activity_my_tag_page" />

</navigation>
